# --- API Tokens ---
BOT_TOKEN=your_telegram_bot_token
DISCORD_BOT_TOKEN=your_discord_bot_token
OPENROUTER_API_KEY=your_openrouter_api_key

# --- LLM Settings ---
OPENROUTER_MODEL=google/gemma-2.0-flash-001:free
SYSTEM_PROMPT=You are a helpful assistant. Answer concisely and clearly.
HISTORY_SIZE=10

# --- Webhook Settings (Optional) ---
USE_WEBHOOK=false
BASE_WEBHOOK_URL=https://yourdomain.com
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=

# --- Server & Docker Config ---
# Local server settings
HOST=0.0.0.0
PORT=8000

# Docker specific ports
APP_PORT=8000
NGINX_PORT=80
DB_PORT=5432

# --- Database ---
# SQLite path (for local dev)
DATABASE_PATH=data/bot.db

# Postgres settings (for Docker)
POSTGRES_DB=llm_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# POSTGRES_HOST=db
# POSTGRES_PORT=5432

# --- Admin Panel ---
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# --- Other ---
# Comma-separated list of Telegram User IDs allowed to use admin commands
TELEGRAM_ADMIN_IDS=
