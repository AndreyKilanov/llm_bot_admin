# Telegram Bot
BOT_TOKEN=your_bot_token_from_BotFather

# OpenRouter (https://openrouter.ai/keys)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=google/gemma-2.0-flash-001:free

# Промпт: хранится в БД (settings). Если в БД пусто — используется это значение.
SYSTEM_PROMPT=You are a helpful assistant. Answer concisely and clearly.

# History: number of user/assistant message pairs to keep per chat
HISTORY_SIZE=10

# Webhook (only when USE_WEBHOOK=true)
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=
BASE_WEBHOOK_URL=https://yourdomain.com

# Mode: true = webhook, false = long polling
USE_WEBHOOK=false

# Server (for webhook mode)
HOST=0.0.0.0
PORT=8000

# Docker ports
APP_PORT=8000
DB_PORT=5432
NGINX_PORT=80

# Database
DATABASE_PATH=data/bot.db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=llm_bot
# POSTGRES_HOST=db
# POSTGRES_PORT=5432

# Суперюзер: для scripts/create_superuser.py (и start.sh). Логин/пароль в БД.
# Задайте в .env или введите при запуске скрипта.
ADMIN_USERNAME=
ADMIN_PASSWORD=

# Telegram user IDs для /set_prompt (через запятую). Пусто — команда недоступна.
TELEGRAM_ADMIN_IDS=

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here
